<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_music_back_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">


        <ImageView
            android:id="@+id/item_music_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_add_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/item_music_add"
            android:text="ADD"
            android:textColor="#fff"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_music_back_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fa315b"
        android:visibility="visible">

        <ImageView
            android:id="@+id/item_music_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_delete_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/item_music_delete"
            android:text="DELETE"
            android:textColor="#fff"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_music_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/item_music_song"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="nameOfSong"
            android:textStyle="bold"
            android:textSize="18sp"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:id="@+id/item_music_artist"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="nameOfArtist"
            android:textSize="15sp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_below="@id/item_music_song"/>



    </RelativeLayout>



</FrameLayout>