<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:background="@drawable/background_gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-light"
            android:text="SETTINGS"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/settings_back"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-light"
            android:text="Use data"
            android:textSize="30dp"/>

        <Switch
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow to use data when offline"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-light"
            android:text="Dark Theme"
            android:textSize="30dp"/>

        <Switch
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>



    <TextView
        android:id="@+id/use_data_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch between dark and light theme"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/equalizer"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-light"
        android:text="Equalizer"
        android:clickable="true"
        android:textSize="30dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure the sound settings"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"


        />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-light"
        android:text="Terms of Service"
        android:textSize="30dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important information"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"

        />


    <TextView
        android:id="@+id/log_out"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-light"
        android:text="Log out"
        android:clickable="true"
        android:textSize="30dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish current session as AccountName"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"


        />
   </LinearLayout>
